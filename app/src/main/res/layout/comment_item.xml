<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp">

    <!-- Replied-To User Indicator -->
    <TextView
        android:id="@+id/replied_to_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:textStyle="italic"
        android:textColor="@android:color/darker_gray"
        android:visibility="visible" />

    <!-- Comment Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp">

        <TextView
            android:id="@+id/comment_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/comment_content"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="8dp" />

    </LinearLayout>

    <TextView
        android:id="@+id/reply_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reply"
        android:padding="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:textColor="?android:attr/colorPrimary"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true" />


    <!-- RecyclerView for replies, initially hidden -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/replies_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:visibility="gone"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="8dp" />

    <!-- Centered "View Replies" Button -->
    <TextView
        android:id="@+id/view_replies_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="View Replies"
        android:layout_marginTop="10dp"
        android:textColor="?android:attr/colorPrimary"
        android:visibility="gone" />
    
</LinearLayout>
