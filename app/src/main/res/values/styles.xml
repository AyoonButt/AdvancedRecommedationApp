<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Firedatabase_assis" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

    </style>

    <style name="Theme.Firedatabase_assis.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="CircleImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <!-- Bottom Navigation Dark Theme -->
    <style name="DarkBottomNavigationTheme" parent="Theme.MaterialComponents">
        <item name="android:background">@color/dark_nav_background</item>
        <item name="itemIconTint">@color/dark_bottom_nav_colors</item>
        <item name="itemTextColor">@color/dark_bottom_nav_colors</item>
        <item name="itemRippleColor">@color/dark_ripple_color</item>
    </style>

    <!-- Theme for entire LoadVideos activity -->
    <style name="Theme.VideoPlayer" parent="Theme.MaterialComponents.NoActionBar">
        <item name="android:windowBackground">@color/dark_nav_background</item>
        <item name="android:statusBarColor">@color/dark_nav_background</item>
        <item name="android:navigationBarColor">@color/dark_nav_background</item>
        <item name="colorPrimary">@color/dark_item_selected</item>
        <item name="colorPrimaryVariant">@color/dark_surface</item>
        <item name="colorOnPrimary">@color/dark_item_selected</item>
        <item name="android:textColorPrimary">@color/dark_item_selected</item>
    </style>

</resources>
